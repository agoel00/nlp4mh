    </div>
  </section>

  <section class="mt-16 mb-16">
    <div class="container">
      <h2 class="mb-16 text-5xl text-center">Collaborations</h2>
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
        <Counter logo="/logo-bar-ilan-university.png" />
